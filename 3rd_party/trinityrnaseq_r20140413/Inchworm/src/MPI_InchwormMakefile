SOURCES=Fasta_entry.cpp sequenceUtil.cpp \
                   MPIinchworm.cpp KmerCounter.cpp string_util.cpp \
                   Fasta_reader.cpp stacktrace.cpp argProcessor.cpp


CC=mpic++
CFLAGS=-pedantic -fopenmp -Wall -Wextra -Wno-long-long -Wno-deprecated -m64 -ggdb
LDFLAGS=-pedantic -fopenmp -Wall -Wextra -Wno-long-long -Wno-deprecated -m64 -ggdb
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=MPIinchworm

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS) 
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@

.cpp.o:
	$(CC) -c $(CFLAGS) $< -o $@
